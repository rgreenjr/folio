<?xml version="1.0"?>
<package xmlns="http://www.idpf.org/2007/opf" unique-identifier="BookId" version="2.0">

  <metadata xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:opf="http://www.idpf.org/2007/opf">
    <dc:title><%= book.metadata.title %></dc:title>
    <dc:language>en</dc:language>
    <dc:identifier id="BookId" opf:scheme="ISBN"><%= book.metadata.identifier %></dc:identifier>
    <dc:creator opf:file-as="<%= book.metadata.creator %>" opf:role="aut"><%= book.metadata.creator %></dc:creator>
    <dc:date opf:event="publication"><%= book.metadata.date %></dc:date>
    <dc:subject><%= book.metadata.subject %></dc:subject>
    <dc:description><%= book.metadata.description %></dc:description>
    <dc:subject><%= book.metadata.subject %></dc:subject>
    <dc:rights><%= book.metadata.rights %></dc:rights>
    <% if book.metadata.cover %>
    <meta name="cover" content="<%= book.metadata.cover.id %>"/>
    <% end %>
  </metadata>

  <manifest><% book.manifest.each do |item| %>
    <item id="<%= item.id %>" href="<%= item.href %>" media-type="<%= item.mediaType %>" /><% end %>
	<item id="ncx" href="<%= book.manifest.ncx.href %>" media-type="<%= book.manifest.ncx.mediaType %>" />
  </manifest>

  <spine toc="ncx"><% book.spine.each do |item| %>
    <itemref idref="<%= item.id %>" /><% end %>
  </spine>

  <guide><% book.guide.each do |item| %>
    <reference type="<%= item.referenceType %>" title="<%= item.referenceTitle %>" href="<%= item.href %>" /><% end %>
  </guide>

</package>
