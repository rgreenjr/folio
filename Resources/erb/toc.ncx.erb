<?xml version="1.0"?>
<ncx version="2005-1" xml:lang="en" xmlns="http://www.daisy.org/z3986/2005/ncx/">

  <head>
    <meta name="dtb:uid" content="<%= navigation.id %>"/>
    <meta name="dtb:depth" content="<%= navigation.depth %>"/>
    <meta name="dtb:totalPageCount" content="0"/>
    <meta name="dtb:maxPageNumber" content="0"/>
  </head>
 
  <docTitle>
    <text><%= navigation.title.escapeHTML %></text>
  </docTitle>
 
  <docAuthor>
    <text><%= navigation.docAuthor.escapeHTML %></text>
  </docAuthor>

  <navMap>
  <% stack = [] %>
  <% navigation.root.each { |point| stack << point } %>
  <% playOrder = 0 %>
  <% while stack.size > 0 %>
    <% point = stack[0] %>
    <% if point != :visited %>
      <navPoint id="<%= point.id.escapeHTML %>" playOrder="<%= playOrder += 1 %>">
        <navLabel>
          <text><%= point.text.escapeHTML %></text>
        </navLabel>
	    <content src="<%= point.src.escapeHTML %>"/>
      <% stack.insert(0, :visited) %>
      <% point.children.each_with_index { |child, index| stack.insert(index, child) } %>
    <% else %>
      <% stack.shift %>
      <% point = stack.shift %>
      </navPoint>
    <% end %>
  <% end %>
  </navMap>

</ncx>



